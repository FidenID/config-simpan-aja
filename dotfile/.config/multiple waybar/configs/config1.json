{
    "layer": "top",
    "position": "top",
    "height": 30, 
    "margin-top": 5,
    "margin-left": 8,
    "margin-right": 8,
    "spacing": 4,

    "modules-left": ["custom/distro", "hyprland/workspaces", "cpu", "memory"],
    "modules-center": ["clock"],
    "modules-right": ["pulseaudio", "network", "battery", "tray", "custom/power"],

    "custom/distro": {
        "format": "󰣇",
        "tooltip": false
    },

    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "all-outputs": true
    },

    "cpu": {
        "interval": 5,
        "format": "  {usage}%"
    },

    "memory": {
        "interval": 5,
        "format": "  {used:0.1f}G"
    },

    "clock": {
        "format": "󰥔  {:%H:%M}",
        "format-alt": "󰃭  {:%a, %d %b}",
        "tooltip": false
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "󰝟",
        "format-icons": { "default": ["󰕿", "󰖀", "󰕾"] },
        "on-click": "pavucontrol"
    },

    "network": {
        "format-wifi": "󰤨  {signalStrength}%",
        "format-ethernet": "󰈀",
        "format-disconnected": "󰤭",
        "tooltip-format": "{essid}"
    },

    "battery": {
        "states": { "warning": 30, "critical": 15 },
        "format": "{icon} {capacity}%",
        "format-charging": "󱐋 {capacity}%",
        "format-icons": ["󰁺", "󰁼", "󰁾", "󰂀", "󰁹"]
    },

    "tray": {
        "icon-size": 15,
        "spacing": 8
    },

    "custom/power": {
        "format": "󰐥",
        "on-click": "wlogout",
        "tooltip": false
    }
}