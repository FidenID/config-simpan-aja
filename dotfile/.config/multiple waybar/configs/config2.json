{
  "layer": "top",
  "height": 35,
  "margin-top": 10,
  "margin-left": 10,
  "margin-right": 10,
  "spacing": 0,

  "modules-left": [
    "custom/launcher",
    "tray",  // Ditambahkan di sini
    "cpu",
    "memory",
    "temperature",
    "custom/window-name",
    "custom/playerctl",
    "disk",
    "custom/pacman-update-icon",
    "custom/pacman-update"
  ],

  "modules-center": [
    "hyprland/workspaces"
  ],

  "modules-right": [
    "battery",
    "custom/dot-alt",
    "backlight",
    "pulseaudio",
    "custom/dot-alt",
    "network",
    "custom/dot-alt",
    "clock"
  ],

  "custom/launcher": {
    "format": "󰣇"
  },

  "custom/window-name": {
    "format": "<b>{}</b>",
    "interval": 1,
    "exec": "hyprctl activewindow | grep class | awk '{print $2}'"
  },

  "custom/playerctl": {
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 40,
    "exec": "playerctl -a metadata --format '{\"text\":\"{{title}}\",\"icon\":\"{{status}}\"}' -F",
    "format-icons": {
      "Playing": "",
      "Paused": "󰏥"
    },
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "on-click-middle": "playerctl previous"
  },

  "custom/dot-alt": {
    "format": ""
  },

  "custom/pacman-update-icon": {
    "format": ""
  },

  "custom/pacman-update": {
    "format": "{}",
    "interval": 3600,
    "exec": "checkupdates | wc -l"
  },

  // Tray module (ditambahkan)
  "tray": {
    "icon-size": 18,
    "spacing": 8
  },

  "cpu": {
    "interval": 10,
    "format": " {usage}%"
  },

  "memory": {
    "interval": 30,
    "format": " {}%"
  },

  "temperature": {
    "thermal-zone": 0,
    "format": " {temperatureC}°C"
  },

  "disk": {
    "interval": 5,
    "format": " {}%"
  },

  "backlight": {
    "device": "amdgpu_bl1",
    "format": "{icon} {percent}",
    "format-icons": ["","","","","","","","",""]
  },

  "pulseaudio": {
    "format": "{icon} {volume}",
    "format-icons": {
      "default": ["󰝟","","󰕾",""]
    }
  },

  "network": {
    "format-wifi": "󰒢 {essid}",
    "format-ethernet": " wired",
    "format-disconnected": ""
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-icons": ["","","","","","","","","",""]
  },

  "clock": {
    "format": "{:%I:%M %p}"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "active": "",
      "default": ""
    }
  }
}
